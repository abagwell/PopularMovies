<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movieDetailBackground">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MovieDetailsActivity"
        android:orientation="vertical"
        android:background="@color/movieDetailBackground">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textSize="25sp"
            android:typeface="serif"
            android:textStyle="italic"
            android:textColor="@color/movieDetailText" />

        <ImageView
            android:id="@+id/movie_poster_detailActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/movieDetailText"/>

        <TextView
            android:id="@+id/movie_release_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/release_date_title"
            android:textSize="16sp"
            android:textColor="@color/movieDetailText"/>


        <TextView
            android:id="@+id/movie_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/movieDetailText"/>

        <TextView
            android:id="@+id/movie_vote_average_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/vote_average_title"
            android:textSize="16sp"
            android:textColor="@color/movieDetailText"/>

        <TextView
            android:id="@+id/movie_vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/movieDetailText"/>

        <TextView
            android:id="@+id/movie_plot_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/plot_summary_title"
            android:textSize="16sp"
            android:textColor="@color/movieDetailText"/>

        <TextView
            android:id="@+id/movie_plot_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/movieDetailText"/>

    </LinearLayout>
</ScrollView>